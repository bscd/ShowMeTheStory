.free-WaterfallFlow{
  width:94%;
  column-count:1;/*column-count 属性规定元素应该被分隔的列数：*/
}
.free-WaterfallFlow .flex-wrap{
  display: inline-block;
  width:98%;
  margin-bottom:2%;
  border:1px solid #ccc;
  padding:2%;
  padding-top:4%;
  margin-right:2%;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
  /*text-align: center;*/
}
.flex-wrap image{
  margin:0 auto;
  float:left;
  width:128px;
}
